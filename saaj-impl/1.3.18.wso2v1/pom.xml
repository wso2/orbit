<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <groupId>org.wso2.orbit.com.sun.xml.messaging.saaj</groupId>
    <artifactId>saaj-impl</artifactId>
    <packaging>bundle</packaging>
    <name>saaj.wso2</name>
    <version>1.3.18.wso2v1</version>
    <description>
        This bundle will export packages from saaj
    </description>
    <url>http://wso2.org</url>

    <dependencies>
        <dependency>
            <groupId>com.sun.xml.messaging.saaj</groupId>
            <artifactId>saaj-impl</artifactId>
            <version>${version.saaj-impl}</version>
        </dependency>

    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
                        <Bundle-Name>${project.artifactId}</Bundle-Name>
                        <Export-Package>
                            com.sun.xml.messaging.saaj.*;version="${version.saaj-impl}"
                        </Export-Package>
                        <Import-Package>
                            !sun.misc,
                            !junit.framework,
                            com.sun.org.apache.xerces.*;resolution:=optional,
                            javax.activation;resolution:=optional,
                            javax.imageio.*;resolution:=optional,
                            javax.xml.*;resolution:=optional,
                            org.jvnet.mimepull;resolution:=optional;version="[1.7,2)",
                            org.w3c.dom;resolution:=optional,
                            org.xml.sax.*;resolution:=optional, 
                        </Import-Package>
                        <Private-Package>
                        </Private-Package>
                        <Include-Resource>
                            @saaj-impl-${version.saaj-impl}.jar!/META-INF/services/*,
                        </Include-Resource>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <properties>
        <version.saaj-impl>1.3.18</version.saaj-impl>
    </properties>

    <distributionManagement>
        <repository>
            <id>wso2.releases</id>
            <name>WSO2 internal Repository</name>
            <url>https://maven.wso2.org/nexus/content/repositories/releases/</url>
        </repository>

        <snapshotRepository>
            <id>wso2.snapshots</id>
            <name>Apache Snapshot Repository</name>
            <url>https://maven.wso2.org/nexus/content/repositories/snapshots/</url>
        </snapshotRepository>
    </distributionManagement>

</project>
