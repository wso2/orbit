<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <groupId>org.wso2.orbit.org.jongo.wso2</groupId>
    <artifactId>jongo</artifactId>
    <version>${jongo.export.version}</version>
    <packaging>bundle</packaging>
    <name>WSO2 Carbon Orbit - Jongo</name>
    <description>
        This bundle will export packages from jongo library
    </description>
    <url>http://wso2.org</url>

    <repositories>
        <repository>
            <id>wso2-nexus</id>
            <name>WSO2 internal Repository</name>
            <url>http://maven.wso2.org/nexus/content/groups/wso2-public/</url>
            <releases>
                <enabled>true</enabled>
                <updatePolicy>daily</updatePolicy>
                <checksumPolicy>fail</checksumPolicy>
            </releases>
        </repository>
    </repositories>

    <distributionManagement>
        <repository>
            <id>wso2.releases</id>
            <name>WSO2 internal Repository</name>
            <url>http://maven.wso2.org/nexus/content/repositories/releases/</url>
        </repository>

        <snapshotRepository>
            <id>wso2.snapshots</id>
            <name>Apache Snapshot Repository</name>
            <url>http://maven.wso2.org/nexus/content/repositories/snapshots/</url>
        </snapshotRepository>
    </distributionManagement>

    <dependencies>
        <dependency>
            <groupId>org.jongo</groupId>
            <artifactId>jongo</artifactId>
            <version>${jongo.version}</version>
            <optional>true</optional>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <version>2.4.0</version>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
                        <Bundle-Name>${project.artifactId}</Bundle-Name>
                        <Export-Package>
                            org.jongo.*;version="${jongo.export.version}"
                        </Export-Package>
                        <Private-Package>
                        </Private-Package>
                        <Import-Package>
                            !org.jongo.*,
                            com.fasterxml.jackson.annotation;resolution:=optional;version="[2.4,3)",
                            com.fasterxml.jackson.core;resolution:=optional;version="[2.4,3)",
                            com.fasterxml.jackson.core.io;resolution:=optional;version="[2.4,3)",
                            com.fasterxml.jackson.databind;resolution:=optional;version="[2.4,3)",
                            com.fasterxml.jackson.databind.annotation;resolution:=optional;version="[2.4,3)",
                            com.fasterxml.jackson.databind.deser;resolution:=optional;version="[2.4,3)",
                            com.fasterxml.jackson.databind.introspect;resolution:=optional;version="[2.4,3)",
                            com.fasterxml.jackson.databind.module;resolution:=optional;version="[2.4,3)",
                            com.fasterxml.jackson.databind.ser;resolution:=optional;version="[2.4,3)",
                            com.mongodb;resolution:=optional,
                            com.mongodb.gridfs;resolution:=optional,
                            com.mongodb.util;resolution:=optional,
                            de.undercouch.bson4jackson;resolution:=optional;version="[2.4,3)",
                            de.undercouch.bson4jackson.io;resolution:=optional;version="[2.4,3)",
                            de.undercouch.bson4jackson.types;resolution:=optional;version="[2.4,3)",
                            org.bson;resolution:=optional,
                            org.bson.io;resolution:=optional,
                            org.bson.types;resolution:=optional
                        </Import-Package>
                        <Include-Resource>
                            {maven-resources}
                        </Include-Resource>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <properties>
        <jongo.version>1.2</jongo.version>
        <jongo.export.version>1.2.0.wso2v1</jongo.export.version>
    </properties>
</project>
