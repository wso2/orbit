<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">


    <modelVersion>4.0.0</modelVersion>
    <groupId>org.tmatesoft.svnkit.wso2</groupId>
    <artifactId>svnkit</artifactId>
    <packaging>bundle</packaging>
    <name>svnkit</name>
    <version>1.3.9.wso2v1</version>
    <description>
        Svn client bundle
    </description>
    <url>http://wso2.org</url>

    <dependencies>
        <dependency>
            <groupId>org.tmatesoft.svnkit</groupId>
            <artifactId>svnkit</artifactId>
            <version>1.3.9</version>
        </dependency>
        <dependency>
            <groupId>org.tmatesoft.svnkit</groupId>
            <artifactId>svnkit-javahl16</artifactId>
            <version>1.3.9</version>
            <exclusions>
                <exclusion>
                    <groupId>org.apache.subversion</groupId>
                    <artifactId>svn-javahl-api</artifactId>
                </exclusion>
            </exclusions>
        </dependency>

    </dependencies>

    <repositories>
        <repository>
            <id>svn-kit-maven-repo</id>
            <url>http://maven.svnkit.com/maven2</url>
        </repository>
        <repository>
            <id>svn-kit-jfrog-repo</id>
            <url>http://repo.jfrog.org/artifactory/libs-releases</url>
        </repository>
        <repository>
            <id>svn-kit-tmatesoft-release-repo</id>
            <url>http://maven.tmatesoft.com/content/repositories/releases/</url>
        </repository>
        <repository>
            <id>svn-tmatesoft-snapshot-repo</id>
            <url>http://maven.tmatesoft.com/content/repositories/snapshots/</url>
        </repository>

    </repositories>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <version>1.4.0</version>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Bundle-SymbolicName>${pom.artifactId}</Bundle-SymbolicName>
                        <Bundle-Name>${pom.artifactId}</Bundle-Name>
                        <Export-Package>
                            org.*, de.*,javax.ejb.*
                        </Export-Package>
                        <Import-Package>
                            *;resolution:=optional
                        </Import-Package>
                        <DynamicImport-Package>*</DynamicImport-Package>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>