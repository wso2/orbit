<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
   <modelVersion>4.0.0</modelVersion>
   <name>odata-server 4.0.0.wso2v1 Orbit Bundle</name>
   <description>This bundle exports packages from the Olingo commons library</description>
   <url>http://wso2.org</url>

   <groupId>org.wso2.io.reactivex</groupId>
   <artifactId>rxjava</artifactId>
   <version>1.2.0.wso2v1</version>
   <packaging>bundle</packaging>

   <repositories>
      <repository>
         <id>java.net</id>
         <url>http://repo1.maven.org/maven2/</url>
      </repository>
   </repositories>

   <distributionManagement>
      <repository>
         <id>wso2.releases</id>
         <name>WSO2 internal Repository</name>
         <url>http://maven.wso2.org/nexus/content/repositories/releases/</url>
      </repository>
      <snapshotRepository>
         <id>wso2.snapshots</id>
         <name>Apache Snapshot Repository</name>
         <url>http://maven.wso2.org/nexus/content/repositories/snapshots/</url>
      </snapshotRepository>
   </distributionManagement>

   <dependencies>
      <dependency>
         <groupId>io.reactivex</groupId>
         <artifactId>rxjava</artifactId>
         <version>${io.reactivex.version}</version>
         <optional>true</optional>
      </dependency>
   </dependencies>

   <properties>
        <io.reactivex.version>1.2.0</io.reactivex.version>
        <orbit.version.rxjava>${io.reactivex.version}.wso2v1</orbit.version.rxjava>
   </properties>

   <build>
      <plugins>
         <plugin>
            <groupId>org.apache.felix</groupId>
            <artifactId>maven-bundle-plugin</artifactId>
            <version>2.4.0</version>
            <extensions>true</extensions>
            <configuration>
               <instructions>
                  <Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
                  <Bundle-Name>${project.artifactId}</Bundle-Name>
                  <Export-Package>rx.*; version="${orbit.version.rxjava}"</Export-Package>                  
                  <Import-Package>sun.misc; resolution:=optional</Import-Package>
                  <Private-Package/>
                  <Include-Resource>{maven-resources}</Include-Resource>
               </instructions>
            </configuration>
         </plugin>
      </plugins>
   </build>
</project>
