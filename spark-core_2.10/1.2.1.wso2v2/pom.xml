<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <groupId>org.wso2.orbit.org.apache.spark</groupId>
    <artifactId>spark-core_2.10</artifactId>
    <version>1.2.1.wso2v2</version>
    <packaging>bundle</packaging>
    <name>WSO2 Carbon Orbit - Apache Spark Core</name>
    <description>
        This bundle will export packages from Apache Spark core v 1.2.1
    </description>
    <url>http://wso2.org</url>

    <repositories>
        <repository>
            <id>wso2-nexus</id>
            <name>WSO2 internal Repository</name>
            <url>https://maven.wso2.org/nexus/content/groups/wso2-public/</url>
            <releases>
                <enabled>true</enabled>
                <updatePolicy>daily</updatePolicy>
                <checksumPolicy>fail</checksumPolicy>
            </releases>
        </repository>
    </repositories>

    <distributionManagement>
        <repository>
            <id>wso2.releases</id>
            <name>WSO2 internal Repository</name>
            <url>https://maven.wso2.org/nexus/content/repositories/releases/</url>
        </repository>
        <snapshotRepository>
            <id>wso2.snapshots</id>
            <name>Apache Snapshot Repository</name>
            <url>https://maven.wso2.org/nexus/content/repositories/snapshots/</url>
        </snapshotRepository>
    </distributionManagement>

    <dependencies>
        <dependency>
            <groupId>org.apache.spark</groupId>
            <artifactId>spark-core_2.10</artifactId>
            <version>${spark.version}</version>
            <exclusions>
                <exclusion>
                    <groupId>javax.servlet</groupId>
                    <artifactId>servlet-api</artifactId>
                </exclusion>
            </exclusions>
            <optional>true</optional>
        </dependency>
        <dependency>
            <groupId>org.apache.spark</groupId>
            <artifactId>spark-network-common_2.10</artifactId>
            <version>${spark.version}</version>
            <optional>true</optional>
        </dependency>
        <dependency>
            <groupId>org.apache.spark</groupId>
            <artifactId>spark-network-shuffle_2.10</artifactId>
            <optional>true</optional>
            <version>${spark.version}</version>
        </dependency>

        <!--private packages-->
        <dependency>
            <groupId>org.spark-project.akka</groupId>
            <artifactId>akka-remote_2.10</artifactId>
            <version>${akka.version}</version>
            <optional>true</optional>
        </dependency>
        <dependency>
            <groupId>org.spark-project.akka</groupId>
            <artifactId>akka-actor_2.10</artifactId>
            <version>${akka.version}</version>
            <optional>true</optional>
        </dependency>

        <dependency>
            <groupId>com.typesafe</groupId>
            <artifactId>config</artifactId>
            <version>${typesafe.version}</version>
            <optional>true</optional>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <version>2.4.0</version>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
                        <Bundle-Name>${project.artifactId}</Bundle-Name>
                        <Export-Package>
                            org.apache.spark.*;version="${exp.pkg.version.spark}";-split-package:=merge-first,
                        </Export-Package>
                        <Private-Package>
                            <!-- these were made private beacuse of reference.conf file missing for com.typesafe.config bundle -->
                            com.typesafe.config.*,
                            akka.*
                        </Private-Package>
                        <Import-Package>
                            !scala.tools.*,
                            scala.*;version="${scala.import.version}",
                            org.apache.commons.lang3.*;version="${commons-lang3.import.version}",
                            org.apache.commons.math3.*;version="${commons-math3.import.version}",
                            io.netty.*;version="${netty-all.import.version}",
                            org.apache.hadoop.*;version=$"{hadoop.client.import.version}",
                            javax.servlet.*;version ="${servlet-api.import.version}",
                            com.typesafe.config.*;version=$"{typesafe.import.version}",
                            akka.*; version=$"{akka.import.version}",
                            com.codahale.metrics.*;version="${codahale.metrics.import.version}",
                            com.fasterxml.jackson.*;version="${jackson.import.version}",
                            org.json4s.*;version = "${json4s.import.version}",
                            com.esotericsoftware.*; version = "${kryo.import.version}",
                            org.xerial.snappy.*;version="${snappy.import.version}",
                            com.ning.compress.*;version="${compress.lzf.import.version}",
                            com.google.common.base.*;version="${guava.import.version}",
                            com.google.common.cache.*;version="${guava.import.version}",
                            com.google.common.collect.*;version="${guava.import.version}",
                            com.google.common.hash.*;version="${guava.import.version}",
                            com.google.common.io.*;version="${guava.import.version}",
                            com.google.common.util.concurrent.*;version="${guava.import.version}",
                            org.slf4j.*;version="${slf4j.import.version}",
                            com.twitter.chill.*;version="${chill.import.version}",
                            org.slf4j.*;version="${slf4j.import.version}",
                            com.clearspring.analytics.*;version="${stream.import.version}",
                            *;resolution:=optional
                        </Import-Package>
                        <Include-Resource>
                            {maven-resources}
                        </Include-Resource>
                        <!--Dynamic imports enabled here because spark core uses scala reflection-->
                        <DynamicImport-Package>*</DynamicImport-Package>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <properties>
        <exp.pkg.version.spark>1.2.1.wso2v2</exp.pkg.version.spark>
        <spark.version>1.2.1</spark.version>
        <spark.import.version>[1.2.1, 1.3.0)</spark.import.version>
        <hadoop.client.import.version>[2.6.0, 2.7.0)</hadoop.client.import.version>
        <typesafe.version>1.2.0</typesafe.version>
        <typesafe.import.version>[1.2.0, 1.3.0)</typesafe.import.version>
        <akka.version>2.3.4-spark</akka.version>
        <codahale.metrics.import.version>[3.0.0, 3.1.0)</codahale.metrics.import.version>
        <jackson.import.version>[2.3.1, 2.3.2)</jackson.import.version>
        <json4s.import.version>[3.2.10, 3.2.11)</json4s.import.version>
        <kryo.import.version>[2.21,3.0)</kryo.import.version>
        <snappy.import.version>[1.1.1.6, 1.1.1.7)</snappy.import.version>
        <netty-all.import.version>[4.0.23, 4.0.24.Final)</netty-all.import.version>
        <scala.import.version>[2.10.4, 2.11.0)</scala.import.version>
        <commons-math3.import.version>[3.1.1, 3.1.2)</commons-math3.import.version>
        <commons-lang3.import.version>[3.3.2, 3.3.3)</commons-lang3.import.version>
        <compress.lzf.import.version>[1.0.0, 1.0.1)</compress.lzf.import.version>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <guava.import.version>[14.0.0,15.0.0)</guava.import.version>
        <slf4j.import.version>[1.7.0, 1.8.0)</slf4j.import.version>
        <servlet-api.import.version>[2.5, 3.0)</servlet-api.import.version>
        <chill.import.version>[0.5.0, 0.6.0)</chill.import.version>
        <stream.import.version>[2.2.0, 2.3.0)</stream.import.version>
    </properties>

</project>
