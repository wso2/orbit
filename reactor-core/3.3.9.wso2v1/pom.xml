<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <groupId>org.wso2.orbit.io.projectreactor</groupId>
    <artifactId>reactor-core</artifactId>
    <version>3.3.9.wso2v1</version>
    <packaging>bundle</packaging>
    <name>WSO2 Carbon Orbit - reactor-core</name>
    <description>
        This bundle will export packages from reactor-core libraries of reactor.core
    </description>
    <url>http://wso2.org</url>

    <distributionManagement>
        <repository>
            <id>wso2.releases</id>
            <name>WSO2 internal Repository</name>
            <url>http://maven.wso2.org/nexus/content/repositories/releases/</url>
        </repository>
    </distributionManagement>
    
    <dependencies>
        <dependency>
            <groupId>io.projectreactor</groupId>
            <artifactId>reactor-core</artifactId>
            <version>3.3.9.RELEASE</version>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <version>3.3.0</version>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
                        <Bundle-Name>${project.artifactId}</Bundle-Name>
                        <Export-Package>
                            reactor.adapter.*;version="${reactor-core.export.pkg.version}",
                            reactor.core.*;version="${reactor-core.export.pkg.version}",
                            reactor.util.*;version="${reactor-core.export.pkg.version}",
                        </Export-Package>
                        <Import-Package>
                            !reactor.adapter.*;resolution:=optional;version="[3.3.9,4)",
                            !reactor.core.*;resolution:=optional;version="[3.3.9,4)",
                            !reactor.util.*;resolution:=optional;version="[3.3.9,4)",
                            *;resolution:=optional
                        </Import-Package>
                        <Private-Package>
                        </Private-Package>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <properties>
        <reactor-core.export.pkg.version>3.3.9.RELEASE</reactor-core.export.pkg.version>
    </properties>
</project>
