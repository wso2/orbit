<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <groupId>org.wso2.orbit.com.microsoft.azure</groupId>
    <artifactId>qpid-proton-j-extensions</artifactId>
    <version>1.2.4.wso2v1</version>
    <packaging>bundle</packaging>
    <name>WSO2 Carbon Orbit - qpid-proton-j-extensions</name>
    <description>
        This bundle will export packages from qpid-proton-j-extensions libraries of com.microsoft.azure.proton
    </description>
    <url>http://wso2.org</url>

    <distributionManagement>
        <repository>
            <id>wso2.releases</id>
            <name>WSO2 internal Repository</name>
            <url>https://maven.wso2.org/nexus/content/repositories/releases/</url>
        </repository>
    </distributionManagement>
    
    <dependencies>
        <dependency>
            <groupId>com.microsoft.azure</groupId>
            <artifactId>qpid-proton-j-extensions</artifactId>
            <version>1.2.4</version>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <version>3.3.0</version>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
                        <Bundle-Name>${project.artifactId}</Bundle-Name>
                        <Export-Package>
                            com.microsoft.azure.proton.transport.*;version="${com.microsoft.azure.qpid-proton-j-extensions.export.pkg.version}"
                        </Export-Package>
                        <Import-Package>
                            !com.microsoft.azure.proton.transport.*;resolution:=optional;version="[1.2.4,2)",
                            *;resolution:=optional
                        </Import-Package>
                        <Private-Package>
                        </Private-Package>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <properties>
        <com.microsoft.azure.qpid-proton-j-extensions.export.pkg.version>1.2.4</com.microsoft.azure.qpid-proton-j-extensions.export.pkg.version>
    </properties>
</project>
