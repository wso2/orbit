<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <groupId>org.wso2.noggit</groupId>
    <artifactId>noggit</artifactId>
    <packaging>bundle</packaging>
    <name>noggit.wso2</name>
    <version>${orbit.version.noggit}</version>
    <description>
        This bundle will export packages from noggit jar, org.noggit.*
    </description>
    <url>http://wso2.org</url>

    <dependencies>
        <dependency>
            <groupId>org.noggit</groupId>
            <artifactId>noggit</artifactId>
            <version>${version.noggit}</version>
        </dependency>
    </dependencies>

    <distributionManagement>
        <repository>
            <id>wso2.releases</id>
            <name>WSO2 internal Repository</name>
            <url>http://maven.wso2.org/nexus/content/repositories/releases/</url>
        </repository>
    </distributionManagement>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <version>2.3.7</version>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Bundle-SymbolicName>${pom.artifactId}</Bundle-SymbolicName>
                        <Bundle-Name>${pom.artifactId}</Bundle-Name>
                        <Export-Package>
                            org.noggit.*;version="${version.noggit}"
                        </Export-Package>
                        <Import-Package>
                            !org.noggit.*
                        </Import-Package>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <properties>
        <version.noggit>0.6</version.noggit>
        <orbit.version.noggit>${version.noggit}.wso2v1</orbit.version.noggit>
    </properties>
</project>
