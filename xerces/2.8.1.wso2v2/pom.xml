<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <groupId>xerces.wso2</groupId>
    <artifactId>xercesImpl</artifactId>
    <packaging>bundle</packaging>
    <name>xerces.wso2</name>
    <version>2.8.1.wso2v2</version>
    <description> org.wso2.carbon.xerces. This bundle will represent xerces.jar </description>
    <url>http://wso2.org</url>
    <dependencies>
        <dependency>
            <groupId>xml-apis</groupId>
            <artifactId>xml-apis</artifactId>
            <version>1.3.04</version>
            <optional>true</optional>
        </dependency>
        <dependency>
            <groupId>xerces</groupId>
            <artifactId>xercesImpl</artifactId>
            <version>2.12.1</version>
            <optional>true</optional>
        </dependency>
    </dependencies>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <version>1.4.0</version>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Bundle-SymbolicName>${pom.artifactId}</Bundle-SymbolicName>
                        <Bundle-Name>${pom.artifactId}</Bundle-Name>
                        <Export-Package> javax.xml.parsers.*;version="1.3.04", org.apache.xml.serialize.*, org.apache.xerces.*, org.apache.html.* </Export-Package>
                        <Import-Package> !javax.xml.parsers.*;version="1.3.04", !org.apache.xerces.*, !org.apache.xml.serialize.*, *;resolution:=optional </Import-Package>
                        <Include-Resource> @xercesImpl-2.12.1.jar!/META-INF/services/** </Include-Resource>
                        <DynamicImport-Package>*</DynamicImport-Package>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>